#:kivy 2.1.0
<RoundedButton@Button>:
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (0,0,0, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10]
<RoundedButtonBlue@Button>:
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (0,0.267,0.4,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10]

