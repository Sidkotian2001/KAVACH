		Label:
			text : "NAME:"
			font_size : 20
			color: 0.52,0,0.64,1
			bold : True
			pos_hint : {'center_x' : 0.2, 'center_y':0.75}

		TextInput:
			id : name2
			multiline : False
			size_hint : 0.3, 0.1
			pos_hint : {"center_x" : 0.5, "center_y" : 0.75}

		Label:
			text : "EMAIL: "
			font_size : 20
			color : 0.52,0,0.64,1
			bold : True
			pos_hint : {"center_x" : 0.2, "center_y" : 0.60}

		TextInput:
			id : email
			multiline : False
			size_hint : 0.3, 0.1
			pos_hint : {"center_x" : 0.5, "center_y" : 0.60}

		Label:
			text : "PASSWORD: "
			color: 0.52,0,0.64,1
			font_size : 20
			bold : True
			size_hint : 0.2, 0.1
			pos_hint : {"center_x" : 0.2, "center_y" : 0.45}
		TextInput:
			id : pwd
			multiline : False
			size_hint : 0.3, 0.1
