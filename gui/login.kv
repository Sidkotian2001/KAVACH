		Image:
			source : 'image_taken_1.jpg'
			allow_stretch: True
			keep_ratio: False
			size_hint: 0.4, 0.4
			pos_hint: {'center_x': 0.75, 'center_y': 0.5}
		
		Label:
			text: 'Right eye'
			color: 0,0,0,1
			size_hint: 0.3, 0.2
			pos_hint: {'center_x' : 0.75, 'center_y' : 0.8}
		
		Button:
			id: 'continue'
			text: 'Continue'
			size_hint : 0.2, 0.1
			pos_hint: {'center_x' : 0.5, 'center_y' : 0.20}
