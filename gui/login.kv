				app.root.current = 'getpatientinfo'
				root.manager.transition.direction = 'left'

		
		Button:
			id: 'retake image'
			text: 'Retake Images'
			size_hint: 0.2, 0.1
			pos_hint: {'center_x' : 0.5, 'center_y': 0.075}
			on_release:
				app.root.current = 'videofeed'
				root.manager.transition.direction = "right"

