# there are three screens
windowManager:
	loginWindow:
	signupWindow:
	logDataWindow:
	runningWindow:

# GUI for the login window
<loginWindow>:
	email : email
	pwd : pwd
	FloatLayout:
		Image:
            source: '/home/ayush/Downloads/eye.png'
            allow_stretch: True
            keep_ratio: False
		Label:
			text : "Email: "
			color: 0,0,0,1
			size_hint : 0.2, 0.1
			pos_hint : {"x":0.25, "top":0.9}
		TextInput:
			id : email
			multiline :False
			size_hint : 0.3, 0.1
			pos_hint : {"x" : 0.45, "top" : 0.9}
		Label:
			text : "Password: "
			color: 0,0,0,1
			size_hint : 0.2, 0.1
			pos_hint : {"x" : 0.25, "top" : 0.7}
		TextInput:
			id : pwd
			multiline :False
			size_hint : 0.3, 0.1
			pos_hint : {"x" : 0.45, "top" : 0.7}
		Button:
			text : "LOGIN"
			background_normal: ''
    		background_color: 0.51, 0.54,0.82, 1
			size_hint : 0.3, 0.1
			pos_hint : {"x" : 0.42, "top" : 0.4}
			on_release:
				root.validate()
				root.manager.transition.direction = "up"
		Button:
			text : "Create an account"
			background_normal: ''
    		background_color: 0.51, 0.54,0.82, 1
			size_hint : 0.4, 0.1
			pos_hint : {"x" : 0.37, "top" : 0.2}
			on_release:
				app.root.current = 'signup'
				root.manager.transition.direction = "left"
		

# GUI for the signup window
<signupWindow>:
	name2 : name2
	email : email
	pwd : pwd
	FloatLayout:
		 # Add the background image to the FloatLayout
        Image:
            source: '/home/ayush/Downloads/eye.png'
            allow_stretch: True
            keep_ratio: False

		Label:
			text : "NAME: "
			size_hint : 0.2, 0.1
			pos_hint : {"x":0.25, "top":0.9}
		TextInput:
			id : name2
			multiline : False
			size_hint : 0.3, 0.1
			pos_hint : {"x" : 0.45, "top" : 0.9}
		Label:
			text : "EMAIL: "
			size_hint : 0.2, 0.1
			pos_hint : {"x" : 0.25, "top" : 0.7}
		TextInput:
			id : email
			multiline : False
			size_hint : 0.3, 0.1
			pos_hint : {"x" : 0.45, "top" : 0.7}
		Label:
			text : "PASSWORD: "
			size_hint : 0.2, 0.1
			pos_hint : {"x" : 0.25, "top" : 0.5}
		TextInput:
			id : pwd
			multiline : False
			size_hint : 0.3, 0.1
			pos_hint : {"x" : 0.45, "top" : 0.5}
		Button:
			text : "SUBMIT"
			size_hint : 0.3, 0.1
			pos_hint : {"x" : 0.39, "top" : 0.28}
			on_press :
				root.signupbtn()
				root.manager.transition.direction = "right"

# GUI to show validation result
<logDataWindow>:
	FloatLayout:
		Image:
            source: '/home/ayush/Downloads/eye.png'
            allow_stretch: True
            keep_ratio: False
	
		Button:
			text : "Start model"
			size_hint : 0.4, 0.1
			pos_hint : {"x" : 0.33, "top" : 0.55}
			on_press :
				root.runbtn()

		Button:
			text : "Capture Image"
			size_hint : 0.4, 0.1
			pos_hint : {"x" : 0.33, "top" : 0.4}
			on_release:
				app.root.current = 'video'
				root.manager.transition.direction = "down"
<runningwindow>
	Label:
		text : "Running model"
		size_hint : 0.2, 0.1
		pos_hint : {"x" : 0.3, "top" : 0.8}
		
		
# GUI for pop up window
<P>:
	Label:
		text : "Please enter valid information"
		size_hint : 0.2, 0.1
		pos_hint : {"x" : 0.3, "top" : 0.8}
