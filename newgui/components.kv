            font_size: 27
            color: (0,0.267,0.4,1)
            pos_hint: {'center_x': 0.26, 'center_y': 0.54}
        Label:
            text: 'Diabetic Retinopathy'
            font_size: 27
            color: (0,0.267,0.4,1)
            pos_hint: {'center_x': 0.25, 'center_y': 0.42}
        Label:
