#:kivy 2.1.0
WindowManager:
    patientWindow:

<RoundedButton@Button>:
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (0,0,0, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10]

<patientWindow>:
    
    canvas:
        Color:
            rgba: 0,0.267,0.4,1
            # rgba: 0,0,0,1
    
        Rectangle:
            pos: self.pos
            size: (self.width, self.height)
        
        Color:
            rgba : 1,1,1,1
        RoundedRectangle:
            pos: (self.center_x - ((self.width - 75)/2), self.center_y  - ((self.height - 75)/2))
            size: (self.width - 70, self.height - 70)
            radius: [20]
        
    patient_firstname : patient_firstname
    patient_lastname : patient_lastname
    patient_mobile : patient_mobile
	patient_age : patient_age
	patient_gender : patient_gender

    FloatLayout:

        Image:
            source: 'infyuva_tech.jpeg'
            allow_stretch: True
            keep_ratio: False
            size_hint: 0.15, 0.1
            pos_hint: {'center_x': 0.13, 'center_y': 0.89}
        
        Label:
            text: '[b]User[/b] Profile'
            # font_name : 'Inter/static/Inter-Regular.ttf'
            markup: True
            font_size: 50
            color : (0,0,0,1)
            pos_hint : {'center_x' : 0.275, 'center_y' : 0.81}
        
        Label:
            text: '     Please enter\nall the patient details'
            font_name : 'Inter/static/Inter-Regular.ttf'
            multiline: True
            font_size: 25
            color: (0,0,0,1)
            pos_hint: {'center_x': 0.275, 'center_y': 0.7}

        TextInput:
            id: patient_firstname
            hint_text: 'First Name'
            hint_text_color: (0,0,0,1)
            font_name : 'Inter/static/Inter-Regular.ttf'
            halign: 'center'
            background_color: (1,1,1,1)
            multiline: False
            background_normal: ""
            background_active: ""
            size_hint : 0.281, 0.05
            pos_hint : {'center_x' : 0.275, 'center_y' : 0.575}
            canvas.after:
                Color:
                    rgba: (0.85, 0.85, 0.85, 0.5)
                RoundedRectangle:
                    size: self.size
                    pos:self.pos
                    radius: 10,
        
        TextInput:
            id: patient_lastname
            hint_text: 'Last Name'
            hint_text_color: (0,0,0,1)
            font_name : 'Inter/static/Inter-Regular.ttf'
            halign: 'center'
            background_color: (1,1,1,1)
            multiline: False
            background_normal: ""
            background_active: ""
            size_hint : 0.281, 0.05
            pos_hint : {'center_x' : 0.275, 'center_y' : 0.5}
            canvas.after:
                Color:
                    rgba: (0.85, 0.85, 0.85, 0.5)
                RoundedRectangle:
                    size: self.size
                    pos:self.pos
                    radius: 10,
        
        TextInput:
            id: patient_mobile
            hint_text: 'Mobile'
            hint_text_color: (0,0,0,1)
            font_name : 'Inter/static/Inter-Regular.ttf'
            halign: 'center'
            background_color: (1,1,1,1)
            multiline: False
            background_normal: ""
            background_active: ""
            size_hint : 0.281, 0.05
            pos_hint : {'center_x' : 0.275, 'center_y' : 0.425}
            canvas.after:
                Color:
                    rgba: (0.85, 0.85, 0.85, 0.5)
                RoundedRectangle:
                    size: self.size
                    pos:self.pos
                    radius: 10,
        
        TextInput:
            id: patient_age
            hint_text: 'Age'
            hint_text_color: (0,0,0,1)
            font_name : 'Inter/static/Inter-Regular.ttf'
            halign: 'center'
            background_color: (1,1,1,1)
            multiline: False
            background_normal: ""
            background_active: ""
            size_hint : 0.281, 0.05
            pos_hint : {'center_x' : 0.275, 'center_y' : 0.35}

            canvas.after:
                Color:
                    rgba: (0.85, 0.85, 0.85, 0.5)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: 10,
            
        
        TextInput:
            id: patient_gender
            hint_text: 'Gender'
            hint_text_color: (0,0,0,1)
            font_name : 'Inter/static/Inter-Regular.ttf'
            halign: 'center'
