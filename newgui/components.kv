#:kivy 2.1.0
WindowManager:
    patientWindow:
    evalautionWindow:
<RoundedButton@Button>:
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (0,0,0, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10]
<RoundedButtonBlue@Button>:
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (0,0.267,0.4,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10]
<patientWindow>:
    
    canvas:
        Color:
            rgba: 0,0.267,0.4,1
            # rgba: 0,0,0,1
    
        Rectangle:
            pos: self.pos
            size: (self.width, self.height)
        
        Color:
            rgba : 1,1,1,1
        RoundedRectangle:
            pos: (self.center_x - ((self.width - 75)/2), self.center_y  - ((self.height - 75)/2))
            size: (self.width - 70, self.height - 70)
            radius: [20]
        
    patient_firstname : patient_firstname
    patient_lastname : patient_lastname
    patient_mobile : patient_mobile
	patient_age : patient_age
	patient_gender : patient_gender

    FloatLayout:

        Image:
            source: 'infyuva_tech.jpeg'
            allow_stretch: True
            keep_ratio: False
            size_hint: 0.15, 0.1
            pos_hint: {'center_x': 0.13, 'center_y': 0.89}
        
        Label:
            text: '[b]User[/b] Profile'
            # font_name : 'Inter/static/Inter-Regular.ttf'
            markup: True
            font_size: 50
            color : (0,0,0,1)
            pos_hint : {'center_x' : 0.275, 'center_y' : 0.81}
        
        Label:
            text: '     Please enter\nall the patient details'
            font_name : 'Inter/static/Inter-Regular.ttf'
            multiline: True
            font_size: 25
            color: (0,0,0,1)
            pos_hint: {'center_x': 0.275, 'center_y': 0.7}

        TextInput:
            id: patient_firstname
            hint_text: 'First Name'
            hint_text_color: (0,0,0,1)
            font_name : 'Inter/static/Inter-Regular.ttf'
            halign: 'center'
            background_color: (1,1,1,1)
            multiline: False
            background_normal: ""
            background_active: ""
            size_hint : 0.281, 0.05
            pos_hint : {'center_x' : 0.275, 'center_y' : 0.575}
            canvas.after:
                Color:
                    rgba: (0.85, 0.85, 0.85, 0.5)
                RoundedRectangle:
                    size: self.size
                    pos:self.pos
                    radius: 10,
        
        TextInput:
            id: patient_lastname
            hint_text: 'Last Name'
            hint_text_color: (0,0,0,1)
            font_name : 'Inter/static/Inter-Regular.ttf'
            halign: 'center'
            background_color: (1,1,1,1)
            multiline: False
            background_normal: ""
            background_active: ""
            size_hint : 0.281, 0.05
            pos_hint : {'center_x' : 0.275, 'center_y' : 0.5}
            canvas.after:
                Color:
                    rgba: (0.85, 0.85, 0.85, 0.5)
                RoundedRectangle:
                    size: self.size
                    pos:self.pos
                    radius: 10,
        
        TextInput:
            id: patient_mobile
            hint_text: 'Mobile'
            hint_text_color: (0,0,0,1)
            font_name : 'Inter/static/Inter-Regular.ttf'
            halign: 'center'
            background_color: (1,1,1,1)
            multiline: False
            background_normal: ""
            background_active: ""
            size_hint : 0.281, 0.05
            pos_hint : {'center_x' : 0.275, 'center_y' : 0.425}
            canvas.after:
                Color:
                    rgba: (0.85, 0.85, 0.85, 0.5)
                RoundedRectangle:
                    size: self.size
                    pos:self.pos
                    radius: 10,
        
        TextInput:
            id: patient_age
            hint_text: 'Age'
            hint_text_color: (0,0,0,1)
            font_name : 'Inter/static/Inter-Regular.ttf'
            halign: 'center'
            background_color: (1,1,1,1)
            multiline: False
            background_normal: ""
            background_active: ""
            size_hint : 0.281, 0.05
            pos_hint : {'center_x' : 0.275, 'center_y' : 0.35}

            canvas.after:
                Color:
                    rgba: (0.85, 0.85, 0.85, 0.5)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: 10,
            
        
        TextInput:
            id: patient_gender
            hint_text: 'Gender'
            hint_text_color: (0,0,0,1)
            font_name : 'Inter/static/Inter-Regular.ttf'
            halign: 'center'
            background_color: (1,1,1,1)
            multiline: False
            background_normal: ""
            background_active: ""
            size_hint : 0.281, 0.05
            pos_hint : {'center_x' : 0.275, 'center_y' : 0.275}

            canvas.after:
                Color:
                    rgba: (0.85, 0.85, 0.85, 0.5)
                RoundedRectangle:
                    size: self.size
                    pos:self.pos
                    radius: 10,
        
        RoundedButton:
            text:"Submit"
            font_name : 'Inter/static/Inter-Regular.ttf'
            font_size : 20
            size_hint : 0.281, 0.075
            pos_hint : {'center_x' : 0.275 ,'center_y' : 0.15}
            on_press:
                root.submit_info()
                app.root.current = 'evalautioninfoWindow'
				root.manager.transition.direction = "left"


        Image:
            source: 'infyuvaFigma 1.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: 0.475, 0.8835
            pos_hint: {'center_x': 0.73, 'center_y': 0.505}
 

        Label:
            id:'Welcome to Infyuva'
            
            text:'[b][size=25]Welcome to Infyuva\n\nTech Solutions![/size][/b]\n \nInfyuva Tech Solutions offer\ninnovative AI-based diagnosis\nscreening tools for improved\npatient care.'
            # font_name : 'Inter/static/Inter-Regular.ttf'
            lineheight: 3.5
            markup: True
            multiline: True
            color: (1,1,1,1)
            size_hint: 0.3, 0.4
            pos_hint: {'center_x': 0.725, 'center_y': 0.5}
            canvas.before:
                Color:
                    rgba: (0,0,0,0.6)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: 10,

<evalautionWindow>:
    canvas:
        Color:
            rgba: 0,0.267,0.4,1
    
        Rectangle:
            pos: self.pos
            size: (self.width, self.height)
        
        Color:
        
            rgba : 0.645,0.717,0.796,0.6
        RoundedRectangle:
            pos: (self.center_x - ((self.width - 75)/2), self.center_y  - ((self.height - 75)/2))
            size: (self.width - 100, self.height - 125)
            radius: [20]
        Color:
            rgba : 0.85, 0.85, 0.85, 0.5
        RoundedRectangle:
            pos: (100,375)
            size: (300, 50)
            radius: [10]
        Color:
            rgba : 0.85, 0.85, 0.85, 0.5
        RoundedRectangle:
            pos: (100,300)
            size: (300, 50)
            radius: [10]
        Color:
            rgba : 0.85, 0.85, 0.85, 0.5
        RoundedRectangle:
            pos: (100,225)
            size: (300, 50)
            radius: [10]
        Color:
            rgba : 0.85, 0.85, 0.85, 0.5
        RoundedRectangle:
            pos: (100,150)
            size: (300, 50)
            radius: [10]
    FloatLayout:

        Image:
            source: 'infyuva_bluelogo.png'
            allow_stretch: False
            keep_ratio: False
            size_hint: 0.12, 0.18
