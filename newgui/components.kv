            allow_stretch: False
            keep_ratio: False
            size_hint: 0.34, 0.34
            pos_hint: {'center_x': 0.7, 'center_y': 0.5}

        RoundedButtonBlue:
            text:"Start Model"
            font_name : 'Inter/static/Inter-Regular.ttf'
            font_size : 20
