            pos_hint : {'center_x' : 0.275, 'center_y' : 0.275}

            canvas.after:
                Color:
                    rgba: (0.85, 0.85, 0.85, 0.5)
                RoundedRectangle:
                    size: self.size
                    pos:self.pos
                    radius: 10,
        
        RoundedButton:
            text:"Submit"
            font_name : 'Inter/static/Inter-Regular.ttf'
