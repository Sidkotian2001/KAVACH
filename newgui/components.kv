			active: True
			pos_hint: {"center_x": 0.46, "center_y": 0.67}
		
		CheckBox:
			id: amd
			color: 0,0.5,0,1
			active: True
			pos_hint: {"center_x": 0.46, "center_y": 0.54}

		CheckBox:
			id: dr
			color: 0,0.5,0,1
			active: True
			pos_hint: {"center_x": 0.46, "center_y": 0.42}
		
		CheckBox:
			id: glaucoma
			color: 0,0.5,0,1
			active: True

			pos_hint: {"center_x": 0.46, "center_y": 0.30}
			