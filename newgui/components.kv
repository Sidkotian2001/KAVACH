            color: (1,1,1,1)
            pos_hint: {'center_x': 0.57, 'center_y': 0.92}
        Label:
            text: 'Select the parameters to be evaluated:'
            font_name : 'Inter/static/Inter-Regular.ttf'
            bold: True
            font_size: 30
            color: (0,0.267,0.4,1)
